<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/onlyNetWork"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="数据库和网络"/>

    <Button
        android:id="@+id/netWorkItem"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="网络 Item"
        app:layout_constraintTop_toBottomOf="@id/onlyNetWork"/>

    <Button
        android:id="@+id/netWorkPage"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="网络 Page"
        app:layout_constraintTop_toBottomOf="@id/netWorkItem"/>

</android.support.constraint.ConstraintLayout>